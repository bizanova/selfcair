<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_reports_designer_wizard" model="ir.ui.view">
              <field name="name">Report Excel</field>
              <field name="model">reports_designer_wizard</field>
              <field name="arch" type="xml">
                <form string="Report Excel">
                        <field name="report_description" invisible="0" nolabel="1"/>
					<span invisible="1">
                        <field name="report_conf" widget="selection"/>
                        <field name="report_name" widget="selection"/>
	                </span>
	                <separator style=" margin-top: 0 !important;"/>
                    <group>
                        <group name='placeholder1' style="width:50%">
	                    </group>
                        <group name='placeholder2' style="width:50%">
	                    </group>
                    </group>
                    <footer >
                        <button name="export_excel" string="Print"  type="object" class="btn-primary"/>
                        <button type="button" string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
              </field>
        </record>
    </data>
</odoo>
